 @inherits Umbraco.Web.Mvc.UmbracoViewPage<Sss.Mutobo.Core.PageModels.BasePage>
@using System.Globalization
@using ClientDependency.Core.Mvc
@using Sss.Mutobo.Core.Configuration
@using Sss.Mutobo.Core.Interfaces
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = null;

}
 <!DOCTYPE html>
@*TODO: set the language attribute dynamically *@
<html lang="@CultureInfo.CurrentCulture.TwoLetterISOLanguageName">
<head>
    <meta charset=UTF-8>
    <meta name=viewport content="width=device-width, initial-scale=1.0">
    @*<link href="/web-components-cms-template/src/favicon.ico" rel="short" />*@

    @{

        Html.RequiresCss($"~/web-components-cms-template-base/src/es/components/web-components-cms-template/src/css/css/misc.css");
        Html.RequiresCss($"~/web-components-cms-template-base/src/es/components/web-components-cms-template/src/css/css/fonts.css");
        Html.RequiresCss("~/web-components-cms-template-base/src/css/variabels.css");
        Html.RequiresJs($"~/web-components-cms-template-base/wc-config.js?baseUrl=/web-components-cms-template-base/src/es/components/");
    }

    @Html.RenderCssHere()
    <title>@Model.PageTitle</title>
    @Html.Action("Index", "Seo")
    @if (Model.Theme != null)
    {
        @Html.Action("Index", "CssVariables", new { Theme = Model.Theme as ITheme })
    }
    

    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Jomhuria&display=swap');

        @@import url('https://fonts.googleapis.com/css2?family=Big+Shoulders+Stencil+Display:wght@800&display=swap');
    </style>
</head>
<body>
    <p-general>
        @Html.Partial("~/Views/Partials/Header.cshtml", Model.HeaderConfiguration)
        @RenderBody()
        @Html.Partial("~/Views/Partials/Footer.cshtml", Model.FooterConfiguration as Sss.Mutobo.Core.Configuration.FooterConfiguration)
    </p-general>

@Html.RenderJsHere()
</body>
</html>